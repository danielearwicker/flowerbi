    <TargetFramework>$(NetTargetVersion)</TargetFramework>

    <PackageId>FlowerBI.Tools</PackageId>
    <Description>Command line tools for FlowerBI</Description>

    <PackAsTool>true</PackAsTool>
    <ToolCommandName>flowerbi</ToolCommandName>

    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>

    <AssemblyVersion>$(PackageVersion)</AssemblyVersion>

  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\FlowerBI.Engine\FlowerBI.Engine.csproj" />
  </ItemGroup>
</Project>
